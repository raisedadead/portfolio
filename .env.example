# Turborepo Remote Cache Configuration
# Cloudflare Workers cache server URL (no trailing slash)
TURBO_API=
# Team name (must start with "team_")
TURBO_TEAM=
# Authentication token (same as set in Workers via wrangler secret put TURBO_TOKEN)
TURBO_TOKEN=
# Cache signature key (generate with: openssl rand -base64 32)
TURBO_REMOTE_CACHE_SIGNATURE_KEY=

# Cloudflare
CLOUDFLARE_ACCOUNT_ID=
# Cloudflare R2 for Image Storage
# https://dash.cloudflare.com/ → R2 → Manage R2 API Tokens
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_IMAGES=
R2_IMAGES_PUBLIC_DOMAIN=
