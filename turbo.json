{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": ["SENTRY_AUTH_TOKEN"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "public/sitemap*.xml"]
    },
    "build:for-edge": {
      "outputs": [".vercel/output/**"]
    },
    "preview": {
      "dependsOn": ["build:for-edge"]
    },
    "deploy": {
      "dependsOn": ["build:for-edge"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["lint"]
    },
    "test:watch": {},
    "format": {
      "dependsOn": ["lint"]
    },
    "develop": {
      "persistent": true,
      "cache": false
    }
  }
}
