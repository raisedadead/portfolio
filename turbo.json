{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "cf-typegen": {
      "inputs": ["wrangler.jsonc", "package.json"],
      "outputs": ["worker-configuration.d.ts"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "cf-typegen"],
      "inputs": ["src/**", "public/**", "astro.config.mjs", "tsconfig.json", "wrangler.jsonc", "package.json"],
      "outputs": ["dist/**", ".astro/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:watch:ui": {
      "cache": false,
      "persistent": true
    },
    "test:update": {
      "cache": false,
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "inputs": ["src/**", ".github/**/*.{js,ts,mjs}", ".oxlintrc.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "cache": false,
      "inputs": ["src/**", ".github/**/*.{js,ts,mjs}", ".oxlintrc.json", "package.json"]
    },
    "format": {
      "cache": false,
      "inputs": ["**/*.{mjs,cjs,js,jsx,ts,tsx,astro,json,md}"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["**/*.{mjs,cjs,js,jsx,ts,tsx,astro,json,md}", ".prettierrc", ".prettierignore"],
      "outputs": [],
      "cache": true
    },
    "check": {
      "dependsOn": ["cf-typegen"],
      "inputs": ["src/**", "astro.config.mjs", "tsconfig.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "develop": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["cf-typegen"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "lighthouse": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lighthouse:assert": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
