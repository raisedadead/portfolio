{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["lint"]
    },
    "build:for-edge": {
      "dependsOn": ["lint"],
      "outputs": [".vercel/output/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["lint"]
    },
    "format": {
      "dependsOn": ["lint"]
    },
    "develop": {
      "persistent": true,
      "cache": false
    }
  }
}
