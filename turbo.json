{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "cf-typegen": {
      "inputs": ["wrangler.jsonc", "package.json"],
      "outputs": ["worker-configuration.d.ts"],
      "cache": true
    },
    "_build": {
      "dependsOn": ["^_build", "cf-typegen"],
      "inputs": ["src/**", "public/**", "astro.config.mjs", "tsconfig.json", "wrangler.jsonc", "package.json"],
      "outputs": ["dist/**", ".astro/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "_test": {
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:watch:ui": {
      "cache": false,
      "persistent": true
    },
    "test:update": {
      "cache": false,
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"]
    },
    "_test:coverage": {
      "inputs": ["src/**", "vitest.config.ts", "vitest.setup.ts", "tsconfig.json", "package.json"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "_lint": {
      "inputs": ["src/**", "e2e/**", ".github/**/*.{js,ts,mjs}", ".oxlintrc.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "_lint:fix": {
      "cache": false,
      "inputs": ["src/**", "e2e/**", ".github/**/*.{js,ts,mjs}", ".oxlintrc.json", "package.json"]
    },
    "_check": {
      "dependsOn": ["cf-typegen"],
      "inputs": ["src/**", "astro.config.mjs", "tsconfig.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "_develop": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["cf-typegen"]
    },
    "_preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["_build"]
    },
    "_deploy": {
      "dependsOn": ["_build"],
      "cache": false
    },
    "_test:e2e": {
      "dependsOn": ["_build"],
      "inputs": ["e2e/**", "playwright.config.ts"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "_test:e2e:ui": {
      "dependsOn": ["_build"],
      "cache": false,
      "persistent": true
    },
    "_test:e2e:headed": {
      "dependsOn": ["_build"],
      "cache": false
    }
  }
}
