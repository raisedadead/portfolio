{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm turbo:develop",
    "build": "next build",
    "build:for-next-server": "next build",
    "build:for-edge": "npx @cloudflare/next-on-pages",
    "build:for-edge:preview": "npx @cloudflare/next-on-pages && wrangler pages dev",
    "build:with-op": "op run --env-file='.env' -- pnpm build",
    "develop": "next dev",
    "develop:for-edge": "npx @cloudflare/next-on-pages --watch",
    "develop:for-edge:preview": "npx @cloudflare/next-on-pages --watch && wrangler pages dev",
    "deploy": "npx @cloudflare/next-on-pages && wrangler pages deploy",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "postbuild": "next-sitemap --config='sitemap.config.mjs'",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky",
    "test": "vitest run",
    "test:update": "vitest --update",
    "test:watch": "vitest",
    "test:watch:ui": "vitest --ui",
    "turbo:develop": "turbo run develop",
    "turbo:build": "turbo run build",
    "turbo:build:for-edge": "turbo run build:for-edge",
    "turbo:lint": "turbo run lint",
    "turbo:format": "turbo run format",
    "turbo:test": "turbo run test"
  },
  "lint-staged": {
    "**/*.{mjs,cjs,js,jsx,ts,tsx,yaml,yml,json}": [
      "pnpm format"
    ]
  },
  "dependencies": {
    "@headlessui/react": "2.2.2",
    "@heroicons/react": "2.2.0",
    "@types/react-syntax-highlighter": "15.5.13",
    "clsx": "2.1.1",
    "framer-motion": "12.10.5",
    "graphql": "16.11.0",
    "graphql-request": "7.1.2",
    "html-react-parser": "5.2.4",
    "next": "15.3.2",
    "next-sitemap": "4.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "15.6.1",
    "swr": "2.3.3",
    "tailwind-merge": "3.3.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.13.12",
    "@cloudflare/workers-types": "4.20250510.0",
    "@eslint/compat": "1.2.9",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.26.0",
    "@next/bundle-analyzer": "15.3.2",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/postcss": "4.1.6",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.15.17",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/ui": "3.1.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-next-on-pages": "1.13.12",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.2",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.1.6",
    "turbo": "2.5.3",
    "typescript": "5.8.3",
    "vercel": "41.7.4",
    "vitest": "3.1.3",
    "wrangler": "4.14.4"
  },
  "packageManager": "pnpm@10.10.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
