{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "turbo dev",
    "turbo:build": "turbo build",
    "turbo:build:for-edge": "turbo build:for-edge",
    "build": "next build",
    "build:for-edge": "npx @cloudflare/next-on-pages",
    "postbuild": "next-sitemap --config='sitemap.config.mjs'",
    "dev": "next dev",
    "dev:edge": "pnpm build:for-edge && wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat",
    "test": "jest .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "prepare": "is-ci || husky install"
  },
  "lint-staged": {
    "**/*.{mjs,cjs,js,jsx,ts,tsx,yaml,yml}": [
      "pnpm format"
    ]
  },
  "dependencies": {
    "@builder.io/partytown": "0.8.1",
    "@headlessui/react": "1.7.17",
    "@heroicons/react": "2.0.18",
    "@types/react-html-parser": "2.0.2",
    "framer-motion": "10.16.4",
    "graphql": "16.8.1",
    "graphql-request": "6.1.0",
    "next": "13.5.3",
    "next-sitemap": "4.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "2.2.2",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.6.3",
    "@cloudflare/workers-types": "4.20230914.0",
    "@tailwindcss/forms": "0.5.6",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/jest-dom": "6.1.3",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.5",
    "@types/node": "20.6.5",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@types/testing-library__jest-dom": "5.14.9",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "autoprefixer": "10.4.16",
    "eslint": "8.50.0",
    "eslint-config-next": "13.5.3",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-react": "7.33.2",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "14.0.1",
    "next-router-mock": "0.9.9",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "tailwindcss": "3.3.3",
    "turbo": "1.10.14",
    "typescript": "5.2.2",
    "vercel": "32.3.1",
    "wrangler": "3.9.0"
  }
}
