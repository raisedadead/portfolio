{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "develop": "NODE_ENV=development NEXTJS_ENV=development next dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "postbuild": "next-sitemap --config='sitemap.config.mjs'",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky",
    "test": "vitest run",
    "test:update": "vitest --update",
    "test:watch": "vitest",
    "test:watch:ui": "vitest --ui",
    "turbo:develop": "turbo run develop",
    "turbo:build": "turbo run build",
    "turbo:build:for-edge": "turbo run build:for-edge",
    "turbo:lint": "turbo run lint",
    "turbo:format": "turbo run format",
    "turbo:test": "turbo run test"
  },
  "lint-staged": {
    "**/*.{mjs,cjs,js,jsx,ts,tsx,yaml,yml,json}": [
      "pnpm format"
    ]
  },
  "dependencies": {
    "@headlessui/react": "2.2.4",
    "@heroicons/react": "2.2.0",
    "@opennextjs/cloudflare": "1.3.0",
    "@types/react-syntax-highlighter": "15.5.13",
    "clsx": "2.1.1",
    "framer-motion": "12.18.1",
    "graphql": "16.11.0",
    "graphql-request": "7.2.0",
    "html-react-parser": "5.2.5",
    "next": "15.3.3",
    "next-sitemap": "4.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "15.6.1",
    "swr": "2.3.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.25.64"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250614.0",
    "@eslint/compat": "1.3.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.29.0",
    "@next/bundle-analyzer": "15.3.3",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/postcss": "4.1.10",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.15.31",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "@vitejs/plugin-react": "4.5.2",
    "@vitest/ui": "3.2.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.1",
    "postcss": "8.5.5",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.12",
    "tailwindcss": "4.1.10",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "vercel": "41.7.8",
    "vitest": "3.2.3",
    "wrangler": "4.20.0"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
