{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "turbo dev",
    "turbo:build": "turbo build",
    "turbo:build:for-edge": "turbo build:for-edge",
    "build": "next build",
    "build:for-edge": "npx @cloudflare/next-on-pages",
    "postbuild": "next-sitemap --config='sitemap.config.mjs'",
    "dev": "next dev",
    "dev:edge": "pnpm build:for-edge && wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat",
    "test": "jest .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "prepare": "is-ci || husky install"
  },
  "lint-staged": {
    "**/*.{mjs,cjs,js,jsx,ts,tsx,yaml,yml}": [
      "pnpm format"
    ]
  },
  "dependencies": {
    "@builder.io/partytown": "0.8.0",
    "@headlessui/react": "1.7.15",
    "@heroicons/react": "2.0.18",
    "@types/react-html-parser": "2.0.2",
    "framer-motion": "10.12.17",
    "graphql": "16.7.1",
    "graphql-request": "6.1.0",
    "next": "13.4.7",
    "next-sitemap": "4.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "2.2.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.1.0",
    "@cloudflare/workers-types": "4.20230518.0",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.19",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/testing-library__jest-dom": "5.14.6",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "autoprefixer": "10.4.14",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-react": "7.32.2",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.3",
    "next-router-mock": "0.9.6",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "tailwindcss": "3.3.2",
    "turbo": "1.10.7",
    "typescript": "5.1.6",
    "vercel": "30.2.3",
    "wrangler": "3.1.1"
  }
}
