---
import { Image } from 'astro:assets';
import MainLayout from '@/layouts/main-layout.astro';
import { cn } from '@/lib/utils';
---

<MainLayout pageTitle='Page Not Found' variant='main'>
  <section class={cn('mb-8 flex flex-col items-center justify-center')}>
    <div class={cn('prose prose-lg prose-slate max-w-none text-center')}>
      <h1 class={cn('py-4 text-display-lg tracking-tight text-slate-900')}>Page Not Found</h1>
      <p class={cn('text-lg sm:text-xl font-medium text-slate-700')}>
        Oops! It seems you've wandered into uncharted territory.
      </p>
    </div>
    <div class={cn('my-8 flex w-full flex-col items-center justify-center')}>
      <Image src='/images/404.svg' alt='404' width={640} height={640} format='svg' />
      <p class={cn('mt-2 text-xs text-slate-500')}>Image by storyset on Freepik</p>
    </div>
    <p class={cn('mb-6 text-base sm:text-lg font-medium text-slate-700')}>
      Don't worry, even the best explorers get lost sometimes!
    </p>
    <a
      href='/'
      class={cn(
        'inline-flex items-center border-2 border-black bg-orange-200 px-6 py-3 text-sm font-bold sm:text-base md:text-lg',
        'text-black shadow-[4px_4px_0px_var(--color-black)]',
        'transition-all duration-100',
        'hover:bg-orange-100 hover:shadow-[6px_6px_0px_var(--color-black)]',
        'focus-visible:ring-2 focus-visible:ring-orange-500/50 focus-visible:outline-none',
        'active:bg-black active:text-white active:shadow-none'
      )}
    >
      Go home, explorer!
    </a>
  </section>
</MainLayout>
