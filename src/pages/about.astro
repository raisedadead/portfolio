---
import { Email } from '@/components/email';
import { ExpandableSection as ES } from '@/components/expandable-section';
import MainLayout from '@/layouts/main-layout.astro';
import { cn } from '@/lib/utils';
---

<MainLayout pageTitle='Legal - About & Contact' variant='main'>
  <section class={cn('mb-8')}>
    <div class={cn('prose prose-lg prose-slate max-w-none')}>
      <h1 class={cn('py-4 text-center text-3xl font-extrabold tracking-tight text-slate-900')}>About & Contact</h1>
    </div>
  </section>
  <section class={cn('mb-12')}>
    <p class={cn('pb-6 text-center text-lg font-medium text-slate-700')}>Legal information you should be aware of.</p>
    <ul class={cn('list-none space-y-6')}>
      <li>
        <ES title='About' labels={[{ name: 'legal', color: 'blue' }]} defaultOpen={true} client:visible>
          <p class={cn('mb-4 text-lg')}>
            Mrugesh Mohapatra is a software & cloud infrastructure consultant, operating as a sole proprietor of{' '}
            <strong class='font-semibold'> Mrugesh Mohapatra Co. </strong>{' '}
            ("the business") based in Bhubaneswar & Bengaluru, India.
          </p>
          <p class={cn('text-lg')}>
            The business is registered with Ministry of Micro Small and Medium Enterprises, Government of India under
            the "Udyam" scheme.
          </p>
        </ES>
      </li>
      <li>
        <ES
          title='Business, Billing & Tax'
          labels={[
            { name: 'legal', color: 'blue' },
            { name: 'business', color: 'green' }
          ]}
          defaultOpen={true}
          client:visible
        >
          <h4 class={cn('mb-4 text-center text-lg font-bold')}>Udyam Registration Number: UDYAM-OD-19-0026052</h4>
          <p class={cn('mb-4 text-lg')}>
            GSTIN, HSN Codes for services, PAN, and other business-related information is available in the documents,
            such as the pro-forma invoice, billing invoice, etc., sent automatically on completion of a transaction.
            Please get in touch if you are still waiting to receive them.
          </p>
          <p class={cn('text-lg')}>
            <strong class='font-semibold'>
              Tax details for Transactions made outside India:{' '}
            </strong>
            Please get in touch, we will accommodate documents where feasible as per your needs.
          </p>
        </ES>
      </li>
      <li>
        <ES title='Contact' labels={[{ name: 'contact', color: 'orange' }]} defaultOpen={true} client:visible>
          <p class={cn('mb-4 text-center text-lg font-bold')}>
            Email: <Email />
          </p>
          <div class={cn('text-center text-lg')}>
            <p class={cn('mb-2 font-semibold')}>Registered Office Address</p>
            <p>
              Mrugesh Mohapatra Co. - 2nd Floor (Proworks),
              <br />
              235, 13th Cross Rd, Indira Nagar II Stage,
              <br />
              Bengaluru, Karnataka, India - 560038
            </p>
          </div>
        </ES>
      </li>
    </ul>
  </section>
</MainLayout>
